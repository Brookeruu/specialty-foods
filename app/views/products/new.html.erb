<h2>Add New Product</h2>

<% if @product.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <%= f.label :origin %>
  <%= f.text_field :origin %>
  <%= f.submit %>
  <% end %>

<a href="products#index">Return Home</a>
