<!DOCTYPE html>
<html>
  <head>
    <title>SpecialtyFoods</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li> <%= link_to "Made in USA", usa_products_path %> </li>
        <li> <%= link_to "Most Reviewed", most_reviews_products_path %> </li>
        <li> <%= link_to "Recently Added", most_recent_products_path %> </li>
        <li> <%= link_to "All Products", products_path %> </li>
        <br>

      <% if user_signed_in? %>
        <li>Logged in as <strong><%= current_user.username %></strong>
       <%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li> <%= link_to "Sign in", new_user_session_path %> </li>
      <% end %>
      </ul>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
